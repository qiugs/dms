@model RMA_Docker.Models.DashboardViewModel
@{
    ViewBag.Title = "Home Page";
    if (!Request.IsAuthenticated) {
        Response.Redirect("~/Account/Logon");
    }
}

<div style="background-color:#e9ecef; border-radius:0.2rem; padding: 1rem; margin-bottom:2rem;" class="d-flex justify-content-around">
    <div class="card" style="width:24%;">
        <div class="" style="padding: 0.7rem 0.7rem 0;">
            <h6 class="small" style="padding-left:4%;">Accounts</h6>
            <div class="w-100 d-flex justify-content-between">
                <div>
                    <i class="fas fa-male fa-2x text-primary"></i><i class="fas fa-female fa-2x text-danger"></i><i class="fas fa-female fa-2x text-info"></i>
                </div>
                <div style="line-height:45px;" class="text-black-50">@Model.CountTotalWorkers <span class="text-muted" style="font-size:9px;">Wkr</span></div>
            </div>
        </div>
    </div>
    <div class="card" style="width:24%;">
        <div class="" style="padding: 0.7rem 0.7rem 0;">
            <h6 class="small" style="padding-left:4%;">Roles</h6>
            <div class="w-100 d-flex justify-content-between">
                <div><i class="fas fa-users fa-2x text-success"></i></div>
                <div style="line-height:45px;" class="text-black-50">@Model.CountTotalRoles <span class="text-muted" style="font-size:9px;">Grp</span></div>
            </div>
        </div>
    </div>
    <div class="card" style="width:24%;">
        <div class="" style="padding: 0.7rem 0.7rem 0;">
            <h6 class="small" style="padding-left:4%;">Files & Folder</h6>
            <div class="w-100 d-flex justify-content-between">
                <div><i class="fas fa-folder fa-2x text-warning"></i></div>
                <div style="line-height:45px;" class="text-black-50">@Model.CountTotalDocuments <span class="text-muted" style="font-size:9px;">Docs</span></div>
            </div>
        </div>
    </div>
    <div class="card" style="width:24%;">
        <div class="" style="padding: 0.7rem 0.7rem 0;">
            <h6 class="small" style="padding-left:4%;">Templates</h6>
            <div class="w-100 d-flex justify-content-between">
                <div><i class="fas fa-file-alt fa-2x text-info"></i></div>
                <div style="line-height:45px;" class="text-black-50">@Model.CountTotalTemplates <span class="text-muted" style="font-size:9px;">Tmpl</span></div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-around mb-4">
    <div class="col-md-4">
        <h5>Getting started</h5>
        <span class="text-muted font-weight-light small">
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </span>
    </div>
    <div class="col-md-4">
        <h5>Get more libraries</h5>
        <span class="text-muted font-weight-light small">NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</span>
    </div>
    <div class="col-md-4">
        <h5>Web Hosting</h5>
        <span class="text-muted font-weight-light small">You can easily find a web hosting company that offers the right mix of features and price for your applications.</span>
    </div>
</div>

<div class="d-flex justify-content-around mb-4">
    <div class="col-md-4">  </div>
    <div class="col-md-4">  </div>
    <div class="col-md-4">  </div>
</div>